{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "rootDir": "./src/",
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "CommonJS",
    "target": "ES6",
    "allowJs": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "declaration": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
